// vscode上で、「shortcuts json」
// 既定値を上書きするには、このファイル内にキー バインドを挿入しますauto[]
[
  // move to issue
  { "key": "alt+1", "command": "workbench.panel.markers.view.focus" },

  // split editor right
  { "key": "shift+alt+2", "command": "workbench.action.splitEditorRight",
    "when": "editorTextFocus"
  },

  // move editor left
  {
    "key": "shift+ctrl+1", "command": "workbench.action.moveEditorToFirstGroup",
    "when": "editorTextFocus"
  },
  // move editor right
  {
    "key": "shift+ctrl+2", "command": "workbench.action.moveEditorToLastGroup",
    "when": "editorTextFocus"
  },

  // split terminal right
  { "key": "shift+alt+2", "command": "workbench.action.terminal.split",
    "when": "terminalFocus"
  },

  // move to terminal from editor
  { "key": "alt+2", "command": "workbench.action.terminal.focus" },
  // move to editor from terminal
  {
    "key": "escape", "command": "workbench.action.focusActiveEditorGroup",
    "when": "terminalFocus"
  },

  // move between terminal
  { "key": "cmd+1", "command": "workbench.action.terminal.focusPreviousPane",
    "when": "terminalFocus"
  },
  { "key": "cmd+2", "command": "workbench.action.terminal.focusNextPane",
    "when": "terminalFocus"
  },

  // terminate terminal
  { "key": "cmd+W", "command": "workbench.action.terminal.kill",
    "when": "terminalFocus"
  },
]
