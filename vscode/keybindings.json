// do "cmd + shift + p" then input "shortcuts json"
[
  // move to problems
  { "key": "alt+1", "command": "workbench.panel.markers.view.focus" },

  // fix problems
  {
    "key": "right",
    "command": "editor.action.quickFix",
    "when": "problemFocus"
  },

  // split editor right
  {
    "key": "shift+alt+2",
    "command": "workbench.action.splitEditorRight",
    "when": "editorTextFocus"
  },

  // move editor right
  {
    "key": "shift+ctrl+2",
    "command": "workbench.action.moveEditorToLastGroup",
    "when": "editorTextFocus"
  },

  // split terminal right
  {
    "key": "shift+alt+2",
    "command": "workbench.action.terminal.split",
    "when": "terminalFocus"
  },

  // move to terminal from editor
  { "key": "alt+2", "command": "workbench.action.terminal.focus" },

  // move between terminal
  {
    "key": "cmd+1",
    "command": "workbench.action.terminal.focusAtIndex1"
  },
  {
    "key": "cmd+2",
    "command": "workbench.action.terminal.focusAtIndex2"
  },
  {
    "key": "cmd+3",
    "command": "workbench.action.terminal.focusAtIndex3"
  },

  // terminate terminal
  {
    "key": "cmd+W",
    "command": "workbench.action.terminal.kill",
    "when": "terminalFocus"
  },

  // clear terminal history
  {
    "key": "cmd+L",
    "command": "workbench.action.terminal.clear",
    "when": "terminalFocus"
  },

  // go to implementation
  {
    "key": "cmd+Enter",
    "command": "editor.action.goToImplementation",
    "when": "editorHasImplementationProvider && editorTextFocus && !isInEmbeddedEditor"
  },

  // go to references
  {
    "key": "alt+Enter",
    "command": "editor.action.goToReferences",
    "when": "editorHasReferenceProvider && editorTextFocus && !inReferenceSearchEditor && !isInEmbeddedEditor"
  },

  // fold source codes
  {
    "key": "alt+right",
    "command": "editor.foldRecursively",
    "when": "editorTextFocus"
  },

  // unfold source codes
  {
    "key": "alt+left",
    "command": "editor.unfoldRecursively",
    "when": "editorTextFocus"
  },

  // move to editor from panel
  {
    "key": "escape",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "panelFocus"
  }
]
