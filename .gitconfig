#### run git config --global -e

[alias]
    get-default-branch = !git remote show origin | grep 'HEAD branch' | awk '{print $NF}'
    get-current-branch = !git rev-parse --abbrev-ref HEAD
    rebase-after-commit = !sh -c 'git rebase \"$(git get-default-branch)\" \"$(git get-current-branch)\"' -
    commit-before-checkout = "!git a && git commit --no-verify -m \"chore: test\""
    checkout-default-branch = !sh -c 'git checkout \"$(git get-default-branch)\"' -
    ll = !git pull
    sh = "!git push --set-upstream origin \"$(git get-current-branch)\""
    ch = !sh -c 'git commit-before-checkout || git checkout-default-branch && git ll && git checkout $1' -
    re = !git reset --hard
    t = !git tag
    a = !git add --all
    c = !sh -c 'git a && git commit -m \"$*\" && git rebase-after-commit' -
    rc = !git reset --soft HEAD^
    rs = !git stash pop
    st = !git stash
    m = !git merge
    cb = !git checkout -b
    db = !sh -c 'git branch -D $1 && git push origin --delete $1' -
    lr = !git checkout .
    rb = !git branch -m
