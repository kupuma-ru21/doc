#### run git config --global -e

[alias]
    get-default-branch = !git remote show origin | grep 'HEAD branch' | awk '{print $NF}'
    get-current-branch = !git rev-parse --abbrev-ref HEAD
    ll = !git pull
    sh = "!git push --set-upstream origin \"$(git get-current-branch)\""
    ch = !sh -c '(git checkout $1 || (git fetch origin $1 && git checkout $1)) && (git ll && git get-current-branch || git get-current-branch)' -
    re = !git reset --hard
    t = !git tag
    a = !git add --all
    c = !sh -c 'git a && git commit -m \"$*\"' -
    rc = !git reset --soft HEAD^
    rs = !git stash pop
    st = !git stash
    m = !git merge
    cb = !git checkout -b
    db = !sh -c 'git branch -D $1 && git push origin --delete $1' -
    lr = !git checkout .
    rb = !git branch -m
